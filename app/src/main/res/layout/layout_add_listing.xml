<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
            android:id="@+id/add_listing_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:hint="Title"
            android:padding="15dp"/>
    <Spinner
            android:id="@+id/add_listing_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_listing_title">
    </Spinner>
    <EditText
            android:id="@+id/add_listing_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_listing_type"
            android:lines="4"
            android:gravity="top"
            android:background="@android:drawable/editbox_background"
            android:hint="Description"
            android:padding="15dp" />
    <Button
            android:id="@+id/add_image_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/add_listing_description"
            android:text="Add image"
            android:background="@null"
            android:textColor="@android:color/holo_blue_dark"/>
    <ImageView
            android:id="@+id/thumbnail_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:layout_gravity="center"
            android:layout_below="@+id/add_image_btn"/>
</RelativeLayout>
