<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <EditText
            android:id="@+id/add_listing_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:hint="Title"
            android:padding="15dp"/>
     <Spinner
             android:id="@+id/add_listing_type"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:layout_below="@+id/add_listing_title">
     </Spinner>
    <EditText
            android:id="@+id/add_listing_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_listing_type"
            android:lines="4"
            android:gravity="top"
            android:background="@android:drawable/editbox_background"
            android:hint="Description"
            android:padding="15dp" />
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/add_listing_description">
            <Button
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Add image"
                    android:background="@null"
                    android:textColor="@android:color/holo_blue_dark"/>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>