<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/listing_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:cardElevation="0.5dp"
        app:cardCornerRadius="0dp"
        android:backgroundTint="@color/colorForeground">
    <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/listing_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="40dp"
                android:drawablePadding="5dp"
                android:textSize="14sp"
                android:layout_alignBaseline="@+id/listing_profile_img"/>
        <TextView
                android:id="@+id/listing_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_below="@+id/listing_author"/>
        <TextView
                android:id="@+id/listing_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="16sp"
                android:layout_below="@+id/listing_title"/>

        <ImageView
                android:id="@+id/listing_profile_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/ic_account_circle_black_24dp"/>
        <android.support.v4.view.ViewPager
                android:id="@+id/img_pager"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:layout_below="@+id/listing_description"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/img_pager">
            <Button
                    android:id="@+id/open_btn"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:drawableStart="@drawable/ic_search"
                    android:background="?android:attr/selectableItemBackground"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:text="View "
                    android:textColor="@color/colorInteract"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:gravity="center_vertical"/>
            <Button
                    android:id="@+id/watch_btn"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:drawableStart="@drawable/ic_star"
                    android:background="?android:attr/selectableItemBackground"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:text="Watch"
                    android:textColor="@color/colorInteract"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:gravity="center_vertical"/>
            <Button
                    android:id="@+id/message_btn"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:drawableStart="@drawable/ic_message"
                    android:background="?android:attr/selectableItemBackground"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:text="Message"
                    android:textColor="@color/colorInteract"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:gravity="center_vertical"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>